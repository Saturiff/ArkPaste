<Window x:Class="AutoE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoE"
        mc:Ignorable="d"
        Title="AutoE" Height="282.176" Width="266.583" Background="#FF63627A" Topmost="True" ResizeMode="CanMinimize">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="156" Margin="5,8,0,0" VerticalAlignment="Top" Width="235">

            <TabItem Header="自動按鍵">

                <Grid Background="#FF63627A">

                    <Button x:Name="B_StartFarm" Content="開始" HorizontalAlignment="Left" Margin="63,32,0,0" VerticalAlignment="Top" Width="100" Height="30" Foreground="White" BorderBrush="White" Click="Click_B_FarmStart" FontSize="20">
                        <Button.Background>
                            <SolidColorBrush Color="White" Opacity="0"/>
                        </Button.Background>
                    </Button>

                    <Button x:Name="B_PauseFarm" Content="暫停" HorizontalAlignment="Left" Margin="63,67,0,0" VerticalAlignment="Top" Width="100" Height="30" Foreground="White" BorderBrush="White" Click="Click_B_FarmStop" FontSize="20">
                        <Button.Background>
                            <SolidColorBrush Color="White" Opacity="0"/>
                        </Button.Background>
                    </Button>

                    <CheckBox x:Name="CB_ToA" Content="改按A" HorizontalAlignment="Left" Margin="85,6,0,0" VerticalAlignment="Top"  Width="66" Height="21" Foreground="White" BorderBrush="White" FontSize="16" Checked="CB_ToA_Checked" Unchecked="CB_ToA_Unchecked"/>

                </Grid>

            </TabItem>

        </TabControl>

        <Label x:Name="L_InfoText" Content="" HorizontalAlignment="Left" Margin="21,191,0,0" VerticalAlignment="Top" Foreground="White"/>

        <Label Content="Info" HorizontalAlignment="Left" Margin="16,177,0,0" VerticalAlignment="Top" Foreground="White" RenderTransformOrigin="0.488,0.507"/>


    </Grid>
</Window>
