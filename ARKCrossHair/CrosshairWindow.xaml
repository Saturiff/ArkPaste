<Window x:Class="ArkCrosshair.CrosshairWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArkCrosshair"
        mc:Ignorable="d"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="" 
        ResizeMode="NoResize"
        Topmost="True" Width="0" Height="0">

    <Image x:Name="Img_Crosshair" VerticalAlignment="Center" HorizontalAlignment="Center" Height="16" Width="16" Margin="0,0,0,0"/>

</Window>
