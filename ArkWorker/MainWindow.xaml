<Window x:Class="ArkWorker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArkWorker"
        mc:Ignorable="d"
        Title="ShuiNi" Height="346.969" Width="266.583" Background="#FF63627A" Topmost="True" ResizeMode="CanMinimize">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="223" Margin="5,8,0,0" VerticalAlignment="Top" Width="235">
            
            <TabItem Header="背景推土">

                <Grid Background="#FF63627A">

                    <Button x:Name="B_StartFarm" Content="推土" HorizontalAlignment="Left" Margin="63,32,0,0" VerticalAlignment="Top" Width="100" Height="30" Foreground="White" BorderBrush="White" Click="Click_B_FarmStart" FontSize="20">
                        <Button.Background>
                            <SolidColorBrush Color="White" Opacity="0"/>
                        </Button.Background>
                    </Button>

                    <Button x:Name="B_PauseFarm" Content="暫停" HorizontalAlignment="Left" Margin="63,67,0,0" VerticalAlignment="Top" Width="100" Height="30" Foreground="White" BorderBrush="White" Click="Click_B_FarmStop" FontSize="20">
                        <Button.Background>
                            <SolidColorBrush Color="White" Opacity="0"/>
                        </Button.Background>
                    </Button>

                    <Button x:Name="Button_end_1" Content="結束" HorizontalAlignment="Left" Margin="63,102,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="Click_B_End" Foreground="White" BorderBrush="White" FontSize="20">
                        <Button.Background>
                            <SolidColorBrush Color="#FFDDDDDD" Opacity="0"/>
                        </Button.Background>
                    </Button>

                    <CheckBox x:Name="CB_BlackSlot" Content="黑格偵測" HorizontalAlignment="Left" Margin="10,156,0,0" VerticalAlignment="Top"  Width="100" Height="30" Foreground="White" BorderBrush="White" FontSize="20" Checked="CB_BlackSlot_Checked" Unchecked="CB_BlackSlot_Unchecked"/>
                    
                    <Button x:Name="B_Drop" Content="卸除負重" HorizontalAlignment="Left" Margin="119,156,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="Click_B_Drop" Foreground="White" BorderBrush="White" FontSize="20">
                        <Button.Background>
                            <SolidColorBrush Color="#FFDDDDDD" Opacity="0"/>
                        </Button.Background>
                    </Button>

                </Grid>

            </TabItem>

        </TabControl>

        <Label x:Name="L_InfoText" Content="" HorizontalAlignment="Left" Margin="15,250,0,0" VerticalAlignment="Top" Foreground="White"/>

        <Label Content="Info" HorizontalAlignment="Left" Margin="10,236,0,0" VerticalAlignment="Top" Foreground="White" RenderTransformOrigin="1.523,0.56"/>


    </Grid>
</Window>
